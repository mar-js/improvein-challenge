{
  "compilerOptions": {
    "baseUrl": "libs",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/atoms": ["components/atoms/index"],
      "@components/molecules": ["components/molecules/index"],
      "@components/organisms": ["components/organisms/index"],
      "@layouts": ["layouts/index"],
      "@layouts/*": ["layouts/*"],
      "@redux/*": ["redux/*"],
      "@helpers/*": ["helpers/*"],
      "@services/*": ["services/*"],
      "@hooks/*": ["hooks/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
